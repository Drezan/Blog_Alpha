
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/customdatatables.css" />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Categories</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus"></i> New Category </a>
        </div>
    </div>
    <hr />
    <table id="tbCategories" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Order</th>
                @*<th>Created At</th>
                <th>Modified At</th>
                <th>Created By</th>*@
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/category.js"></script>
 }

