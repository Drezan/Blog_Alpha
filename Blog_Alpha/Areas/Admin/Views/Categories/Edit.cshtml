@model Blog_Alpha.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1>Edit Category</h1>
<hr />
<form method="post" asp-action="Edit">
    <div class="col-10 offset-3 mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group ">
            <div class="row">
                <div class="col-6">
                    <label asp-for="Name" class="form-label">Category's Name</label>
                    <input asp-for="Name" class="form-control" type="text" id="Name" name="Name" placeholder="Name" aria-label="default input example">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-6">
                    <label asp-for="Order" class="form-label">Order</label>
                    <input asp-for="Order" class="form-control" type="text" id="Order" name="Order" placeholder="Order" aria-label="default input example">
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="form-group row col-7">
            <div class="col-9 offset-1">
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-outline-success form-control" asp-route-id="@Model.Id">Update</button>
                        &nbsp;
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-outline-danger form-control">Cancel</a>
                    </div>
                </div>

            </div>
        </div>


        <div class="row">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        </div>
    </div>
</form>

