@model Blog_Alpha.Models.Article
@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/customdatatables.css" />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Articles</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus"></i> New Article </a>
        </div>
    </div>
    <hr />
    <table id="tbArticles" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Created At</th>
                <th>Modified At</th>
                @*<th>Autor</th>
                <th>Modified By</th>*@
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="~/js/article.js"></script>
}